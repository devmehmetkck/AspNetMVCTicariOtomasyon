@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2 style="background-color:#8ffff5; text-align:center;" >Ürünler Menü</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Urun Ad</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Kategori</th>
            <th>Satış Adet</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunID</td>
                <td>@item.UrunAd</td>
                <td>@item.Marka</td>
                <td>@item.Stok</td>
                <td>@item.AlisFiyati ₺</td>
                <td>@item.SatisFiyati ₺</td>
                <td>@item.Kategori.KategoriAd</td>
                <td>@item.SatilmaAdet</td>
                <td><a class="btn btn-danger" href="/Urun/UrunSil/@item.UrunID">Sil</a> <a href="/Urun/UrunGetir/@item.UrunID" class="btn btn-success">Güncelle</a> </td>
            </tr>
        }
    </tbody>


</table>
<a href="/Urun/YeniUrun" class="btn btn-info">Yeni Ürün Ekle</a> <a class="btn btn-warning" href="/Urun/SatistaOlmayanlar">Satışta Olmayan Ürünler</a>

